<h1>Restaurants#new</h1>
<p>Find me in app/views/restaurants/new.html.erb</p>

<%= simple_form_for(@restaurant) do |f| %>
  <%= f.input :name %>
  <%= f.input :address %>
  <%= f.input :category, collection: ["chinese", "italian", "japanese", "french", "belgian"], prompt: "Select a category" %>
  <%= f.input :phone_number %>
  <%= f.submit class: "btn btn-primary" %>
<% end %>

<%= button_to "Go Back", restaurants_path, method: :get, class: "btn btn-primary mt-3" %>
