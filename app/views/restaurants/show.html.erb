<h2 class="text-white mb-3"><%= @restaurant.name %></h2>

<div class="card-body shadow pt-3 pb-1 mb-2" style="background-color: #A2678A;">
  <p class="text-dark text-white">Category: <%= @restaurant.category.capitalize %></p>
  <p class="text-dark text-white"><%= @restaurant.address %></p>
  <p class="text-dark text-white"><%= @restaurant.phone_number %></p>

  <% @restaurant.reviews.each do |review| %>
    <div class="card shadow mb-2 text-shadow-bold">
      <div class="d-flex card-body py-1" style="background-color: #A2678A;">
        <p class="mb-2 mx-2">Rating: <%= review.rating %></p>
        <p class="mb-2 mx-2"><%= review.content %></p>
      </div>
    </div>
  <% end %>


  <%= simple_form_for [@restaurant, @review] do |f| %>
    <%= f.input :content %>
    <%= f.input :rating, as: :select, collection: 1..5 %>
    <%= f.submit class: "btn btn-danger my-2" %>
  <% end %>
</div>

<%= button_to "Go Back", restaurants_path, method: :get, class: "btn btn-danger mt-2" %>
